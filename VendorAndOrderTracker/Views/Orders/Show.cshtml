@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Order Title: @Model["order"].Title</h2>
  <h5>Order Description: @Model["order"].Description</h5>
  <h5>Order Price: $@Model["order"].Price</h5>
  <h5>Order Date: @Model["order"].Date.ToLongDateString()</h5>

  <div class="navigation">
    <a href='/vendors/@Model["vendor"].Id'>Back to all orders</a>    
    <a href="/vendors">List of all Vendors</a>
    <a href="/">Home Page</a>
  </div>

  <form action='/vendors/@Model["vendor"].Id/orders/@Model["order"].Id' method="post"> 
    <button type="submit">Delete order</button>
  </form>
</div>