@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Enter new vendor data</h2>
  <form action="/vendors" method="post">
    <label for="vendorName">Vendor Name</label>
    <input type="text" id="vendorName" name="vendorName">
    <label for="vendorDescription">Vendor Description</label>
    <input type="text" id="vendorDescription" name="vendorDescription">
    <button type="submit">Add</button>
  </form>
</div>