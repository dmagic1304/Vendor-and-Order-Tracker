@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;

<div class="container">
  <h2>Vendors List</h2>
  
  @if(@Model.Count == 0)
  {
    <h3>There are no existing vendors</h3>
  }
  
  <ul>
    @foreach (Vendor vendor in @Model)
    {
      <li>@vendor.Name</li>
    }
  </ul>
  
  <a href="/vendors/new">Add new vendor</a>
</div>