@{
  Layout = "_Layout";
}
@using VendorAndOrderTracker.Models;

<div class="container">
  <h2>Vendors List</h2>
  
  @if(@Model.Count == 0)
  {
    <h3>There are no existing vendors</h3>
  }
  
  <ul>
    @foreach (Vendor vendor in @Model)
    {
      <li>
        <a href="/vendors/@vendor.Id"><strong>@vendor.Name</strong></a>
        <p><em>Description:</em> @vendor.Description</p>
      </li>
    }
  </ul>

  <a href="/vendors/new">Add new vendor</a>
  
  @if(@Model.Count != 0)
  {
    <form action="/vendors/deleteall" method="post"> 
      <button type="submit">Delete all vendors</button>
    </form>
  }
</div>